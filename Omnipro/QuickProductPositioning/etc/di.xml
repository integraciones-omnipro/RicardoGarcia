<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Grid and Admin -->
    <virtualType name="OmniproQuickProductPositioningGridFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="PositionsGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Omnipro\QuickProductPositioning\Model\ResourceModel\Position\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">OmniproQuickProductPositioningGridFilterPool</argument>
        </arguments>
    </virtualType>

    <preference for="Magento\Catalog\Block\Adminhtml\Category\AssignProducts"
                type="Omnipro\QuickProductPositioning\Block\Adminhtml\Category\AssignProducts" />


    <type name="Magento\Backend\App\Action\Context">
        <arguments>
            <argument name="urlBuilder" xsi:type="object">Magento\Backend\Model\UrlInterface</argument>
        </arguments>
    </type>


