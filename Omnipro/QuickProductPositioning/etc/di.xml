    <virtualType name="Omnipro\QuickProductPositioning\Model\ResourceModel\Position\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">catalog_category_product</argument>
            <argument name="identifierName" xsi:type="string">entity_id</argument>
            <argument name="eventPrefix" xsi:type="string">catalog_category_product_grid_collection</argument>
            <argument name="eventObject" xsi:type="string">catalog_category_product_collection</argument>
            <argument name="resourceModel" xsi:type="string">Magento\Catalog\Model\ResourceModel\CategoryProduct</argument>
